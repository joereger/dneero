          <!-- Sample cron triggers: http://www.opensymphony.com/quartz/wikidocs/TutorialLesson6.html -->
          <cron>
            <name>closeSurveysByNumRespondentsTrigger</name>
            <group>surveyTriggers</group>
            <job-name>closeSurveysByNumRespondents</job-name>
            <job-group>surveyJobs</job-group>
            <!-- every two minutes -->
            <cron-expression>0 0/10 * * * ?</cron-expression>
          </cron>
        </trigger>
    </job>

    <job>
        <job-detail>
          <name>generateInvoicesForLongOpenSurveys</name>
          <group>surveyJobs</group>
          <job-class>com.dneero.scheduledjobs.GenerateInvoicesForLongOpenSurveys</job-class>
          <volatility>false</volatility>
          <durability>false</durability>
          <recover>false</recover>
        </job-detail>
        <trigger>
          <!-- Sample cron triggers: http://www.opensymphony.com/quartz/wikidocs/TutorialLesson6.html -->
          <cron>
            <name>generateInvoicesForLongOpenSurveysTrigger</name>
            <group>surveyTriggers</group>
            <job-name>generateInvoicesForLongOpenSurveys</job-name>
            <job-group>surveyJobs</job-group>
            <!-- every two minutes -->
            <cron-expression>0 0/10 * * * ?</cron-expression>
          </cron>
        </trigger>
    </job>

    <job>
        <job-detail>
          <name>pendingToOpenSurveys</name>
          <group>surveyJobs</group>
          <job-class>com.dneero.scheduledjobs.PendingToOpenSurveys</job-class>
          <volatility>false</volatility>
          <durability>false</durability>
          <recover>false</recover>
        </job-detail>
        <trigger>
          <!-- Sample cron triggers: http://www.opensymphony.com/quartz/wikidocs/TutorialLesson6.html -->
          <cron>
            <name>pendingToOpenSurveysTrigger</name>
            <group>surveyTriggers</group>
            <job-name>pendingToOpenSurveys</job-name>
            <job-group>surveyJobs</job-group>
            <!-- every two minutes -->
            <cron-expression>0 0/1 * * * ?</cron-expression>
          </cron>
        </trigger>
    </job>

</quartz>