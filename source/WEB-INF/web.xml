    <filter>
        <filter-name>HibernateSessionCloser</filter-name>
        <filter-class>com.dneero.dao.hibernate.HibernateSessionCloser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HibernateSessionCloser</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>EmailActivationServlet</servlet-name>
        <servlet-class>com.dneero.email.EmailActivationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailActivationServlet</servlet-name>
        <url-pattern>/eas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LostPasswordServlet</servlet-name>
        <servlet-class>com.dneero.email.LostPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LostPasswordServlet</servlet-name>
        <url-pattern>/lps</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SurveyJavascriptServlet</servlet-name>
        <servlet-class>com.dneero.survey.servlet.SurveyJavascriptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyJavascriptServlet</servlet-name>
        <url-pattern>/s</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SurveyFlashServlet</servlet-name>
        <servlet-class>com.dneero.survey.servlet.SurveyFlashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyFlashServlet</servlet-name>
        <url-pattern>/flashviewer/dneerosurvey.swf</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SurveyImagelinkServlet</servlet-name>
        <servlet-class>com.dneero.survey.servlet.SurveyImagelinkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyImagelinkServlet</servlet-name>
        <url-pattern>/i</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SurveyHtmlpageServlet</servlet-name>
        <servlet-class>com.dneero.survey.servlet.SurveyHtmlpageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyHtmlpageServlet</servlet-name>
        <url-pattern>/shtml</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DengSwf</servlet-name>
        <servlet-class>com.dneero.survey.servlet.DengSwf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/deng.swf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/blogger/deng.swf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/researcher/deng.swf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/sysadmin/deng.swf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/account/deng.swf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DengSwf</servlet-name>
        <url-pattern>/flashviewer/deng.swf</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>quartz</servlet-name>
        <servlet-class>org.quartz.ee.servlet.QuartzInitializerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <distributable/>

</web-app>
