    <context-param>
        <param-name>facelets.LIBRARIES</param-name>
        <param-value>/WEB-INF/ajaxanywhere.taglib.xml</param-value>
    </context-param>
    <filter>
        <filter-name>AjaxAnywhere</filter-name>
        <filter-class>org.ajaxanywhere.AAFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AjaxAnywhere</filter-name>
        <url-pattern>*.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AjaxAnywhere</filter-name>
        <url-pattern>*.jsf</url-pattern>
    </filter-mapping>
    -->


    <servlet>
        <servlet-name>SurveyJavascriptServlet</servlet-name>
        <servlet-class>com.dneero.survey.servlet.SurveyJavascriptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyJavascriptServlet</servlet-name>
        <url-pattern>/survey.js</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
