<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd" [
<!ENTITY managed-beans_gen          SYSTEM "managed-beans_gen.xml">
<!ENTITY sample-navigation-rules    SYSTEM "sample-navigation-rules.xml">
 <!ENTITY converters_gen    SYSTEM "converters_gen.xml">
]>

<faces-config>
    <application>
        <view-handler>org.apache.myfaces.application.jsp.JspTilesViewHandlerImpl</view-handler>
    </application>

	<managed-bean>
        <managed-bean-name>tilesBacking</managed-bean-name>
        <managed-bean-class>org.apache.myfaces.tiles.example.TilesBacking</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>Registration</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.Registration</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>


    <managed-bean>
        <managed-bean-name>UserList</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.UserList</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>BloggerOfferList</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.BloggerOfferList</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>BloggerEarnings</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.BloggerEarnings</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>BloggerOfferDetail</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.BloggerOfferDetail</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>offer</property-name>
            <value>#{offer}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>NewOffer</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.NewOffer</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>ResearcherOfferList</managed-bean-name>
        <managed-bean-class>com.dneero.formbeans.ResearcherOfferList</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>


    <navigation-rule>
        <from-view-id>/registration.jsp</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/registration-success.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/researcher/newoffer.jsp</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/researcher/researcherofferlist.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registration</from-outcome>
            <to-view-id>/registration.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userlist</from-outcome>
            <to-view-id>/userlist.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>researcherhome</from-outcome>
            <to-view-id>/researcher/index.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newoffer</from-outcome>
            <to-view-id>/researcher/newoffer.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>bloggerearnings</from-outcome>
            <to-view-id>/blogger/earnings.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>bloggerhome</from-outcome>
            <to-view-id>/blogger/index.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>bloggerofferlist</from-outcome>
            <to-view-id>/blogger/bloggerofferlist.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>bloggerofferdetail</from-outcome>
            <to-view-id>/blogger/bloggerofferdetail.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>researcherofferlist</from-outcome>
            <to-view-id>/researcher/researcherofferlist.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
		<from-view-id>/blogger/bloggerofferlist.jsp</from-view-id>
		<navigation-case>
			<from-outcome>beginview_success</from-outcome>
			<to-view-id>/blogger/bloggerofferdetail.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/non-tile.jsp</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/page1.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>    

</faces-config>